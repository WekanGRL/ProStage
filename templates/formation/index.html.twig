{% extends 'base.html.twig' %}

{% block contenu %}
    <h1> Liste des formations</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nom long</th>
                <th>Nom court</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.nomLong }}</td>
                <td>{{ formation.nomCourt }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}">Détails</a>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Nouvelle formation</a>
{% endblock %}
