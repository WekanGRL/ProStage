{% extends 'base.html.twig' %}

{% block contenu %}
    
    <h1 style="color:green"> <b><u><center> Bienvenue sur la page d'accueil de ProStage </b></u></h1>
        <div class="row">
            <div class="col-md-2">
                <center>
			    <h5>
				    <a href="{{path('pro_stage_nouvelle_entreprise')}}"> <i class="icon-plus-circled"></i> <b>Nouvelle entreprise</b> </a>
			    </h5>
		    </div>
        </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <td style="font-size:25px"><b><u>Titre du stage</u></b></td>
                    </div>

                    <div class="col-md-6 col-xs-12">
                        <td style="font-size:25px"><b><u>Descriptif du stage</u></b></td>
                    </div>
                </div>
            </tr>
        </thead>

        {% for stageCourant in stagesAvecEntreprise %}
            <tbody>
                <tr>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <td><a href="{{path('pro_stage_stages', {id:stageCourant.id})}}">{{ stageCourant.titre }} -- {{stageCourant.entreprises.nom}} </a></td> 
                        </div>

                        <div class="col-md-6 col-xs-12">
                            <td>{{ stageCourant.description }}</td>
                        </div>
                    </div>
                </tr>
            </tbody>
            {% endfor %}
    </table>
{% endblock %}
