{% extends 'base.html.twig' %}

{% block contenu %}
    
    <h1> <center> Bienvenue sur la page d'accueil de Prostages </h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <div class="row">
                    <div class="col-md-12">
                        <td>Nom de la formation</td>
                    </div>
                </div>                                   
            </tr>
        </thead>

        {% for formation in formations %}
            {% if formation.stages|length != NULL %}
                <tbody>
                    <tr>
                        <div class="row">
                            <div class="col-md-12">
                                <td><a href="{{path('pro_stage_stagesParFormation', {id:formation.id})}}">{{formation.nomCourt}}</a></td> 
                            </div>
                        </div>
                    </tr>
                </tbody>
            {% endif %}
        {% endfor %}
    </table>
{% endblock %}
